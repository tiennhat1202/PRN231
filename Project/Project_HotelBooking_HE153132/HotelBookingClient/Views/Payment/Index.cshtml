<script type="text/javascript">
    $(document).ready(function () {
        showAllPayments();
        function showAllPayments() {
            var paymentResult;

            var paymentPromise = $.ajax({
                url: "https://localhost:7152/api/Payment?$orderby=paymentId desc",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                paymentResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(paymentPromise).done(function () {
                $("#payment").html("");

                $.each(paymentResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["paymentId"]));
                    appendElement.append($("<td>").html(value["bookingId"]));
                    appendElement.append($("<td>").html(value["paymentMethod"]));
                    var paymentDate = new Date(value["paymentDate"]);
                    var paymentDateFormatted = moment(value["paymentDate"]).format("YYYY-MM-DD");
                    appendElement.append($("<td>").html(paymentDateFormatted));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-info info-btn' data-payment-id='" + value["paymentId"] + "'>Chi tiết</button>"));
                    $("#payment").append(appendElement);
                });
            });
        }

        //Show
        $("table").on("click", ".info-btn", function () {
            var paymentId = $(this).data("payment-id");
            $.ajax({
                url: "https://localhost:7152/api/Payment/" + paymentId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#paymentId").val(result["paymentId"]);
                    $("#bookingIdPayment").val(result["bookingId"]);
                    $("#paymentMethod").val(result["paymentMethod"]);
                    $("#paymentDate").val(result["paymentDate"]);
                    var bookingId = result["bookingId"];
                    $.ajax({
                        url: "https://localhost:7152/api/Booking/" + bookingId,
                        type: "get",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (resultBooking, status, xhr) {
                            $("#totalPricePayment").val(resultBooking["totalPrice"]);

                            var userId = resultBooking["userId"];
                            $.ajax({
                                url: "https://localhost:7152/api/User/" + userId,
                                type: "get",
                                contentType: "application/json; charset=utf-8",
                                dataType: "json",
                                success: function (resultUser, status, xhr) {
                                   var userMap = {};
                                   userMap[resultUser.userId] = resultUser.username;
                                    $("#usernamePayment").val(resultUser.username);
                                },
                                error: function (xhr, status, error) {
                                    console.log(xhr)
                                }
                            });
                            var roomId = resultBooking["roomId"];
                            $.ajax({
                                url: "https://localhost:7152/api/Room/" + roomId,
                                type: "get",
                                contentType: "application/json; charset=utf-8",
                                dataType: "json",
                                success: function (resultRoom, status, xhr) {
                                    var roomMap = {};
                                    roomMap[resultRoom.roomId] = resultRoom.roomName;
                                    $("#roomNamePayment").val(resultRoom.roomName);
                                },
                                error: function (xhr, status, error) {
                                    console.log(xhr)
                                }
                            });
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr)
                        }
                    });
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
            $("#paymentDetailModal").modal("show");
        });
    });
</script>