<script type="text/javascript">
    $(document).ready(function () {

        var searchInput = $("#searchInput");

        showAllRooms(searchInput.val());

        searchInput.on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var query = searchInput.val();

                if (query.trim() === "") {
                    showAllRooms(query);
                } else {
                    showAllRooms(query);
                }
            }
        });

        
        function showAllRooms(query) {
            var roomResult, roomTypeResult, hotelResult;

            var roomsPromise = $.ajax({
                url: "https://localhost:7152/api/Room?$filter=contains(roomName, '" + query + "') or contains(status, '" + query + "')",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                roomResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            var roomTypesPromise = $.ajax({
                url: "https://localhost:7152/api/RoomType",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                roomTypeResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            var hotelsPromise = $.ajax({
                url: "https://localhost:7152/api/Hotel",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                hotelResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(roomsPromise, roomTypesPromise, hotelsPromise).done(function () {
                $("#room").html("");
                var hotelMap = {};
                var roomTypeMap = {};
                $.each(hotelResult, function (index, hotel) {
                    hotelMap[hotel.hotelId] = hotel.hotelName;
                });
                $.each(roomTypeResult, function (index, roomType) {
                    roomTypeMap[roomType.roomTypeId] = roomType.roomTypeName;
                });

                $.each(roomResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["roomName"]));
                    appendElement.append($("<td>").html(hotelMap[value["hotelId"]]));
                    appendElement.append($("<td>").html(roomTypeMap[value["roomTypeId"]]));
                    appendElement.append($("<td>").html(value["pricePerNight"]));
                    //  appendElement.append($("<td>").html(value["status"]));
                    var statusSpan = $("<span>").addClass("badge me-1");
                    if (value["status"] === "Available") {
                        statusSpan.addClass("bg-label-primary").text(value["status"]);
                    } else if (value["status"] === "Booked") {
                        statusSpan.addClass("bg-label-success").text(value["status"]);
                    }
                    else {
                        statusSpan.addClass("bg-label-danger").text(value["status"]);
                    }
                    appendElement.append($("<td>").append(statusSpan));
                    appendElement.append($("<td>").html(value["description"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-room-id='" + value["roomId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-btn' data-room-id='" + value["roomId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));

                    $("#room").append(appendElement);
                });
            });
        }

        // Add
        $(".add-btn").click(function () {
            // Clear input fields
            $("#addroomName").val("");
            $("#addhotelName").val("");
            $("#addroomTypeName").val("");
            $("#addpricePerNight").val("");
            $("#addDescription").val("");
            $("#statusInput").val("Available");

            // Show the addModal
            $("#addModal").modal("show");
        });

        // Fetch Hotel and RoomType
        var apiUrl1 = "https://localhost:7152/api/Hotel";
        var apiUrl2 = "https://localhost:7152/api/RoomType";

        var request1 = $.ajax({
            url: apiUrl1,
            type: "GET",
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        });

        var request2 = $.ajax({
            url: apiUrl2,
            type: "GET",
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        });

        // Đợi cả hai request hoàn thành
        $.when(request1, request2).done(function (response1, response2) {
            var result1 = response1[0];
            var result2 = response2[0];

            // Xử lý kết quả từ API 1
            var selectElement = $("#addhotelId");
            selectElement.empty();
            $.each(result1, function (index, hotel) {
                selectElement.append($("<option>").attr("value", hotel.hotelId).text(hotel.hotelName));
            });
            var selectElement = $("#addroomTypeId");
            selectElement.empty();
            $.each(result2, function (index, roomType) {
                selectElement.append($("<option>").attr("value", roomType.roomTypeId).text(roomType.roomTypeName));
            });
        }).fail(function (xhr, status, error) {
            console.log(xhr);
        });
        //Save Add
        $("#addModal").on("click", ".btn-primary", function () {
            var roomData = {
                roomId: 0,
                roomName: $("#addroomName").val(),
                hotelId: $("#addhotelId").val(),
                roomTypeId: $("#addroomTypeId").val(),
                pricePerNight: $("#addpricePerNight").val(),
                status: $("#addStatus").val(),
                description: $("#addDescription").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/Room",
                type: "post", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(roomData), // Convert hotelData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    console.log(result);
                    $("#addModal").modal("hide");
                    showAllRooms(searchInput.val()); // Corrected function name here
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showAllRooms(searchInput.val());
                }
            });
        });
        //Edit
        $("table").on("click", ".edit-btn", function () {
            var roomId = $(this).data("roomId");
            var hotelId;
            var roomTypeId;
            $.ajax({
                url: "https://localhost:7152/api/Room/" + roomId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#roomIdUpdate").val(result["roomId"]);
                    $("#roomNameUpdate").val(result["roomName"]);
                    $("#hotelIdUpdate").val(result["hotelId"]);
                    $("#roomTypeIdUpdate").val(result["roomTypeId"]);
                    $("#pricePerNightUpdate").val(result["pricePerNight"]);
                    $("#StatusUpdate").val(result["status"]);
                    $("#DescriptionUpdate").val(result["description"]);
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
            $.ajax({
                url: "https://localhost:7152/api/Hotel",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    var selectElement = $("#hotelIdUpdate");
                    selectElement.empty(); // Clear previous options

                    $.each(result, function (index, hotel) {
                        var option = $("<option>").attr("value", hotel.hotelId).text(hotel.hotelName);
                        if (hotel.hotelId == hotelId) {
                            option.attr("selected", "selected"); // Set selected option
                        }
                        selectElement.append(option);
                    });
                    $("#editModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr)
                }
            });
            $.ajax({
                url: "https://localhost:7152/api/RoomType",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    var selectElement = $("#roomTypeIdUpdate");
                    selectElement.empty(); // Clear previous options

                    $.each(result, function (index, roomType) {
                        var option = $("<option>").attr("value", roomType.roomTypeId).text(roomType.roomTypeName);
                        if (roomType.roomTypeId == roomTypeId) {
                            option.attr("selected", "selected"); // Set selected option
                        }
                        selectElement.append(option);
                    });
                    $("#editModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr)
                }
            });
        });
        //Save Edit
        $("#editModal").on("click", ".btn-primary", function () {
            var roomId = $("#roomIdUpdate").val();
            var roomData = {
                roomId: $("#roomIdUpdate").val(),
                roomName: $("#roomNameUpdate").val(),
                hotelId: $("#hotelIdUpdate").val(),
                roomTypeId: $("#roomTypeIdUpdate").val(),
                pricePerNight: $("#pricePerNightUpdate").val(),
                status: $("#StatusUpdate").val(),
                description: $("#DescriptionUpdate").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/Room/" + roomId,
                type: "put",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(roomData), // Convert hotelData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    console.log(result);
                    $("#editModal").modal("hide");
                    showAllRooms(searchInput.val()); // Corrected function name here
                    // Show success toast notification
                    toastr.success('Update Room successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showAllRooms(searchInput.val());
                }
            });
        });

        //Delete
        $("table").on("click", ".delete-btn", function () {
            var roomId = $(this).data("roomId");
            if (confirm("Are you sure you want to delete this room?")) {
                $.ajax({
                    url: "https://localhost:7152/api/Room/" + roomId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        showAllRooms(searchInput.val()); // Refresh the table after deletion
                        toastr.success('Room deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete image.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
    });
</script>