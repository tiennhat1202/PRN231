<script type="text/javascript">
    $(document).ready(function () {
        showRoomImages();

        function showRoomImages() {
            var roomResult, imageofroomResult;

            // Make the first API call to fetch hotels
            var roomsPromise = $.ajax({
                url: "https://localhost:7152/api/Room",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the roomResult variable
                roomResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            // Make the second API call to fetch hotel images
            var imageOfRoomPromise = $.ajax({
                url: "https://localhost:7152/api/RoomImage",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the imageofroomResult variable
                imageofroomResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);

            });

            // Wait for both API calls to finish
            $.when(roomsPromise, imageOfRoomPromise).done(function () {
                // Both API calls have completed, you can now use the results

                // Clear the table body
                $("#image").html("");
                var roomMap = {};
                $.each(roomResult, function (index, room) {
                    roomMap[room.roomId] = room.roomName;
                });
                $.each(imageofroomResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(roomMap[value["roomId"]]));
                    appendElement.append($("<td>").html(value["imageUrl"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#image").append(appendElement);
                });
            });
        }

        //Image Of Hotel
        //Fetch Hotel
        $.ajax({
            url: "https://localhost:7152/api/Room",
            type: "get",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result, status, xhr) {
                var selectElement = $("#addRoomIdInput");
                selectElement.empty();
                $.each(result, function (index, room) {
                    selectElement.append($("<option>").attr("value", room.roomId).text(room.roomName));
                });
                console.log(result)
            },
            error: function (xhr, status, error) {
                console.log(xhr)
            }
        });
        //Add
        $(".add-img-btn").click(function () {
            $("#addRoomIdInput").val(""),
                $("#addImageUrlInput").val(""),
                // Show the addModal
                $("#addImgModal").modal("show");
        });
        //Save Add
        $("#addImgModal").on("click", ".btn-primary", function () {
            var imageData = {
                imageId: 0,
                roomId: $("#addRoomIdInput").val(),
                imageUrl: $("#addImageUrlInput").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomImage",
                type: "post", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(imageData), // Convert hotelData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    console.log(result);
                    $("#addImgModal").modal("hide");
                    showRoomImages(); // Corrected function name here
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },  
                error: function (xhr, status, error) {
                    // Handle the error response
                    showRoomImages(); // Corrected function name here
                }
            });
        });
        //Delete
        $("table").on("click", ".delete-img-btn", function () {
            var imageId = $(this).data("imageId");
            if (confirm("Are you sure you want to delete this image?")) {
                $.ajax({
                    url: "https://localhost:7152/api/RoomImage/" + imageId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        console.log(result);
                        showRoomImages(); // Refresh the table after deletion
                        toastr.success('Image deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete image.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
        //Edit
        $("table").on("click", ".edit-img-btn", function () {
            var imageId = $(this).data("imageId");
            var roomId;
            $.ajax({
                url: "https://localhost:7152/api/RoomImage/" + imageId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#updateImageId").val(result["imageId"]);
                    $("#updateRoomId").val(result["roomId"]);
                    $("#updateImageURL").val(result["imageUrl"]);
                    console.log("Edit Image: " + JSON.stringify(result));
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
            $.ajax({
                url: "https://localhost:7152/api/Room",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    var selectElement = $("#updateRoomId");
                    selectElement.empty(); // Clear previous options

                    $.each(result, function (index, room) {
                        var option = $("<option>").attr("value", room.roomId).text(room.roomName);
                        if (room.roomId == roomId) {
                            option.attr("selected", "selected"); // Set selected option
                        }
                        selectElement.append(option);
                    });
                    $("#editImgModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr)
                }
            });
        });
        //Save Edit
        $("#editImgModal").on("click", ".btn-primary", function () {
            var imageId = $("#updateImageId").val();
            var imageData = {
                imageId: $("#updateImageId").val(),
                imageUrl: $("#updateImageURL").val(),
                roomId: $("#updateRoomId").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomImage/" + imageId,
                type: "put", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(imageData), // Convert imageData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    $("#editImgModal").modal("hide");
                    showRoomImages(); // Corrected function name here
                    // Show success toast notification
                    toastr.success('Hotel information updated successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showRoomImages(); // Corrected function name here
                }
            });
        });
    });
</script>

