<script type="text/javascript">
    $(document).ready(function () {
        showAllHotels();

        var searchInput = $("#searchInput");

        searchInput.on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var query = searchInput.val();

                if (query.trim() === "") {
                    showAllHotels();
                } else {
                    searchHotels(query);
                }
            }
        });

        function searchHotels(query) {
            $("#hotel").html(""); // Clear the table body
            $.ajax({
                url: "https://localhost:7152/api/Hotel?$filter=contains(hotelName, '" + query + "')",
                type: "GET",
                success: function (result, status, xhr) {
                    $.each(result, function (index, value) {
                        // Display the search results in the table
                        var appendElement = $("<tr>");
                        appendElement.append($("<td>").html(value["hotelName"]));
                        appendElement.append($("<td>").html(value["address"]));
                        appendElement.append($("<td>").html(value["state"]));
                        appendElement.append($("<td>").html(value["country"]));
                        appendElement.append($("<td>").html(value["email"]));
                        appendElement.append($("<td>").html(value["description"]));
                        var statusSpan = $("<span>").addClass("badge me-1");
                        if (value["status"] === "Active") {
                            statusSpan.addClass("bg-label-primary").text(value["status"]);
                        } else {
                            statusSpan.addClass("bg-label-danger").text(value["status"]);
                        }
                        appendElement.append($("<td>").append(statusSpan));
                        appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-hotel-id='" + value["hotelId"] + "'><i class='fa-regular fa-pen-to-square'></i></button>"));
                        $("#hotel").append(appendElement);
                    });
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        }

        showImageOfHotels();

        function showAllHotels() {
            $("#hotel").html("");
            $.ajax({
                url: "https://localhost:7152/api/Hotel",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    console.log(result);
                    $.each(result, function (index, value) {
                        var appendElement = $("<tr>");
                        appendElement.append($("<td>").html(value["hotelName"]));
                        appendElement.append($("<td>").html(value["address"]));
                        appendElement.append($("<td>").html(value["state"]));
                        appendElement.append($("<td>").html(value["country"]));
                        appendElement.append($("<td>").html(value["email"]));
                        appendElement.append($("<td>").html(value["description"]));
                        // appendElement.append($("<td>").html("<span class=\"badge bg-label-primary me-1\">" + value["status"] + "</span>"));
                        var statusSpan = $("<span>").addClass("badge me-1");
                        if (value["status"] === "Active") {
                            statusSpan.addClass("bg-label-primary").text(value["status"]);
                        } else {
                            statusSpan.addClass("bg-label-danger").text(value["status"]);
                        }
                        appendElement.append($("<td>").append(statusSpan));
                        appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-hotel-id='" + value["hotelId"] + "'><i class='fa-regular fa-pen-to-square'></i>"));
                        //</button> <button class='btn btn-outline-danger delete-btn' data-hotel-id='" + value["hotelId"] + "'><i class='fa-regular fa-trash-can'></i></button>
                        $("#hotel").append(appendElement);
                    });
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        }

        function showImageOfHotels() {
            var hotelResult, imageofhotelResult;

            // Make the first API call to fetch hotels
            var hotelsPromise = $.ajax({
                url: "https://localhost:7152/api/Hotel",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the hotelResult variable
                hotelResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            // Make the second API call to fetch hotel images
            var imageOfHotelPromise = $.ajax({
                url: "https://localhost:7152/api/HotelImage",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the imageofhotelResult variable
                imageofhotelResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);

            });

            // Wait for both API calls to finish
            $.when(hotelsPromise, imageOfHotelPromise).done(function () {
                // Both API calls have completed, you can now use the results

                // Clear the table body
                $("#image").html("");
                var imageOfHotelMap = {};
                $.each(hotelResult, function (index, hotel) {
                    imageOfHotelMap[hotel.hotelId] = hotel.hotelName;
                });
                $.each(imageofhotelResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(imageOfHotelMap[value["hotelId"]]));
                    appendElement.append($("<td>").html(value["imageUrl"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#image").append(appendElement);
                });
            });
        }



        // Edit
        $("table").on("click", ".edit-btn", function () {
            var hotelId = $(this).data("hotelId");
            $.ajax({
                url: "https://localhost:7152/api/Hotel/" + hotelId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    console.log(result);
                    // Populate the input fields with the hotel data
                    $("#hotelIdInput").val(result["hotelId"]);
                    $("#hotelNameInput").val(result["hotelName"]);
                    $("#addressInput").val(result["address"]);
                    $("#stateInput").val(result["state"]);
                    $("#countryInput").val(result["country"]);
                    $("#emailInput").val(result["email"]);
                    $("#descriptionInput").val(result["description"]);
                    $("#statusInput").val(result["status"]);

                    $("#editModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        });
        // Save Edit
        $("#editModal").on("click", ".btn-primary", function () {
            var hotelId = $("#hotelIdInput").val();
            var hotelData = {
                hotelId: $("#hotelIdInput").val(),
                hotelName: $("#hotelNameInput").val(),
                address: $("#addressInput").val(),
                state: $("#stateInput").val(),
                country: $("#countryInput").val(),
                email: $("#emailInput").val(),
                description: $("#descriptionInput").val(),
                status: $("#statusInput").val()
            };

            $.ajax({
                url: "https://localhost:7152/api/Hotel/" + hotelId,
                type: "put", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(hotelData), // Convert hotelData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    $("#editModal").modal("hide");
                    showAllHotels(); // Corrected function name here
                    // Show success toast notification
                    toastr.success('Hotel information updated successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showAllHotels(); // Corrected function name here
                }
            });
        });
        // Delete
        $("table").on("click", ".delete-btn", function () {
            var hotelId = $(this).data("hotelId");
            if (confirm("Are you sure you want to delete this hotel?")) {
                $.ajax({
                    url: "https://localhost:7152/api/Hotel/" + hotelId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        showAllHotels(); // Refresh the table after deletion
                        toastr.success('Hotel deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete hotel.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
        // Add
        $(".add-btn").click(function () {
            // Clear input fields
            $("#addNameInput").val("");
            $("#addAddressInput").val("");
            $("#addStateInput").val("");
            $("#addCountryInput").val("");
