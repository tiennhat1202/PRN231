@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
        <partial name="_AsideAdmin" />
        <!-- / Menu -->
        <!-- Layout container -->
        <div class="layout-page">
           
            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <div class="container-fluid flex-grow-1 container-p-y">
                    <!-- Basic Bootstrap Table -->
                    <div class="card">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-header">RoomType</h5>
                            <div>
                                <input type="text" id="searchInput" placeholder="Search..." aria-label="Search" />
                                <button class="btn add-btn btn-primary">Thêm</button>
                            </div>
                        </div>
                        <div class="table-responsive text-nowrap">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>RoomTypeName</th>
                                        <th>Description</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="roomType" class="table-border-bottom-0">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--/ Basic Bootstrap Table -->
                </div>
                <!-- / Content -->
                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>
    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add RoomType</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="roomId">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="addroomTypeName" class="form-label">RoomTypeName</label>
                    <input type="text" class="form-control" id="addroomTypeName">
                </div>
                <div class="mb-3">
                    <label for="addDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="addDescription" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit RoomType</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="roomTypeIdUpdate">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="roomTypeNameUpdate" class="form-label">RoomTypeName</label>
                    <input required type="text" class="form-control" id="roomTypeNameUpdate">
                </div>
                <div class="mb-3">
                    <label for="DescriptionUpdate" class="form-label">Description</label>
                    <textarea class="form-control" id="DescriptionUpdate" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
</div>
<style>
    .toast-success {
        background-color: #28a745;
    }

    .toast-error {
        background-color: #dc3545;
    }

    .toast-info {
        background-color: #17a2b8;
    }

    .toast-warning {
        background-color: #ffc107;
    }

    #searchInput {
        margin-right: 5px;
        border-radius: 5px;
        padding-left: 15px;
        width: 315px;
        height: 36px;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {


        var searchInput = $("#searchInput");
        var query = "";
        showAllRoomTypes(searchInput.val());

        searchInput.on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                query = searchInput.val();

                if (query.trim() === "") {
                    showAllRoomTypes(query);
                } else {
                    showAllRoomTypes(query);
                }
            }
        });

        
        function  showAllRoomTypes(query) {
            var roomTypeResult;

            var roomTypesPromise = $.ajax({
                url: "https://localhost:7152/api/RoomType?$filter=contains(roomTypeName, '" + query + "')",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                roomTypeResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(roomTypesPromise).done(function () {
                $("#roomType").html("");

                $.each(roomTypeResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["roomTypeName"]));
                    appendElement.append($("<td>").html(value["description"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-roomtype-id='" + value["roomTypeId"] + "'><i class='fa-regular fa-pen-to-square'></i>"));
                    $("#roomType").append(appendElement);
                });

            });
        }

        //// Add
        $(".add-btn").click(function () {
            // Clear input fields
            $("#addroomTypeName").val("");
            $("#addDescription").val("");
            // Show the addModal
            $("#addModal").modal("show");
        });
        ////Save Add
        $("#addModal").on("click", ".btn-primary", function () {
            var roomTypeData = {
                roomTypeId: 0,
                roomTypeName: $("#addroomTypeName").val(),
                description: $("#addDescription").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomType",
                type: "post", 
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(roomTypeData), 
                success: function (result, status, xhr) {
                    $("#addModal").modal("hide");
                     showAllRoomTypes(query); 
                    // Show success toast notification
                    toastr.success('Add RoomType successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                     showAllRoomTypes(query);
                }
            });
        });
        ////Edit
        $("table").on("click", ".edit-btn", function () {
            var roomTypeId = $(this).data("roomtype-id");
            $.ajax({
                url: "https://localhost:7152/api/RoomType/" + roomTypeId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#roomTypeIdUpdate").val(result["roomTypeId"]);
                    $("#roomTypeNameUpdate").val(result["roomTypeName"]);
                    $("#DescriptionUpdate").val(result["description"]);

                    $("#editModal").modal("show");
                   
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        });
        ////Save Edit
        $("#editModal").on("click", ".btn-primary", function () {
            var roomTypeId = $("#roomTypeIdUpdate").val();
            var roomTypeData = {
                roomTypeId: $("#roomTypeIdUpdate").val(),
                roomTypeName: $("#roomTypeNameUpdate").val(),
                description: $("#DescriptionUpdate").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomType/" + roomTypeId,
                type: "put",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(roomTypeData), 
                success: function (result, status, xhr) {
                    //console.log("Edit Debug:" + JSON.stringify(result))
                    $("#editModal").modal("hide");
                     showAllRoomTypes(query); 
                    // Show success toast notification
                    toastr.success('Update RoomType successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                     showAllRoomTypes(query);
                }
            });
        });

        ////Delete
        $("table").on("click", ".delete-btn", function () {
            var roomTypeId = $(this).data("roomtype-id");
            if (confirm("Are you sure you want to delete this roomType?")) {
                $.ajax({
                    url: "https://localhost:7152/api/RoomType/" + roomTypeId,
                    type: "delete",
                    success: function (result, status, xhr) {
                         showAllRoomTypes(query); // Refresh the table after deletion
                        toastr.success('RoomType deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete roomType.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
    });
</script>