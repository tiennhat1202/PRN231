@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
        <partial name="_AsideAdmin" />
        <!-- / Menu -->
        <!-- Layout container -->
        <div class="layout-page">

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <div class="container-fluid flex-grow-1 container-p-y">
                    <!-- Basic Bootstrap Table -->
                    <div class="card">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-header">RoomImage</h5>
                            <div>
                                <input type="text" id="searchInput" placeholder="Search..." aria-label="Search" />
                                <button class="btn add-btn btn-primary">Thêm</button>
                            </div>
                        </div>
                        <div class="table-responsive text-nowrap">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Room Name</th>
                                        <th>Image URL</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="image" class="table-border-bottom-0">
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <div class="pagination">
                                <a href="#" class="previous">Previous</a>
                                <a href="#" class="page-number">1</a>
                                <a href="#" class="page-number">2</a>
                                <a href="#" class="page-number">3</a>
                                <a href="#" class="next">Next</a>
                            </div>
                        </div>
                    </div>
                    <!--/ Basic Bootstrap Table -->
                </div>
                <!-- / Content -->
                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>
    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
</div>


<!-- Popup Modal -->
<div class="modal fade" id="addImgModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="imageIdInput">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="addRoomIdInput" class="form-label">Hotel Name</label>
                    <select class="form-select" id="addRoomIdInput"></select>
                </div>
                <div class="mb-3">
                    <label for="addImageUrlInput" class="form-label">ImageURL</label>
                    <input type="text" class="form-control" id="addImageUrlInput">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add Image</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Imgae Of Hotel Modal -->

<div class="modal fade" id="editImgModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Update Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="updateImageId">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="updateRoomId" class="form-label">RoomName</label>
                    <select class="form-select" id="updateRoomId"></select>
                </div>
                <div class="mb-3">
                    <label for="updateImageURL" class="form-label">ImageURL</label>
                    <input type="text" class="form-control" id="updateImageURL">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<style>
    .toast-success {
        background-color: #28a745;
    }

    .toast-error {
        background-color: #dc3545;
    }

    .toast-info {
        background-color: #17a2b8;
    }

    .toast-warning {
        background-color: #ffc107;
    }

    #searchInput {
        margin-right: 5px;
        border-radius: 5px;
        padding-left: 15px;
        width: 315px;
        height: 36px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

        .pagination a {
            padding: 5px;
            margin: 0 5px;
            text-decoration: none;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

            .pagination a:hover {
                background-color: #eee;
            }

        .pagination .previous,
        .pagination .next {
            font-weight: bold;
        }

        .pagination .disabled {
            color: #ccc;
            pointer-events: none;
        }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        var pagination = document.querySelector('.pagination');
        var value = 0;
        var skip = 12;
        var top = 12;

        pagination.addEventListener('click', function (event) {
            var target = event.target;
            if (target.tagName === 'A') {
                if (target.classList.contains('page-number')) {
                    var pageNumber = target.textContent - 1;
                    if (pageNumber == 0) {
                        value = 0;
                        showRoomImages(top, value);
                    } else {
                        value = skip * pageNumber;
                        showRoomImages(top, value);
                    }
                } else if (target.classList.contains('previous')) {
                    if (value == 0) {
                        value = 0;
                        showRoomImages(top, value);
                    } else {
                        value -= skip;
                        showRoomImages(top, value);
                    }

                } else if (target.classList.contains('next')) {
                    value += skip;
                    showRoomImages(top, value);
                }
            }
        });

        showRoomImages(top, value);

        function showRoomImages() {
            var roomResult, imageofroomResult;

            // Make the first API call to fetch hotels
            var roomsPromise = $.ajax({
                url: "https://localhost:7152/api/Room",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the roomResult variable
                roomResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            // Make the second API call to fetch hotel images
            var imageOfRoomPromise = $.ajax({
                url: "https://localhost:7152/api/RoomImage?$top=" + top + "&$skip=" + value,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                // Store the result in the imageofroomResult variable
                imageofroomResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);

            });

            // Wait for both API calls to finish
            $.when(roomsPromise, imageOfRoomPromise).done(function () {
                // Both API calls have completed, you can now use the results

                // Clear the table body
                $("#image").html("");
                var roomMap = {};
                $.each(roomResult, function (index, room) {
                    roomMap[room.roomId] = room.roomName;
                });
                $.each(imageofroomResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(roomMap[value["roomId"]]));
                    var maxCharacters = 50; // Số ký tự tối đa hiển thị

                    var displayText = value["imageUrl"].length > maxCharacters ? value["imageUrl"].substring(0, maxCharacters) + "..." : value["imageUrl"];

                    appendElement.append($("<td>").html(displayText));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-img-btn' data-image-id='" + value["imageId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#image").append(appendElement);
                });
            });
        }

        //Image Of Hotel
        //Fetch Hotel
        $.ajax({
            url: "https://localhost:7152/api/Room",
            type: "get",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result, status, xhr) {
                var selectElement = $("#addRoomIdInput");
                selectElement.empty();
                $.each(result, function (index, room) {
                    selectElement.append($("<option>").attr("value", room.roomId).text(room.roomName));
                });
                console.log(result)
            },
            error: function (xhr, status, error) {
                console.log(xhr)
            }
        });
        //Add
        $(".add-img-btn").click(function () {
            $("#addRoomIdInput").val(""),
                $("#addImageUrlInput").val(""),
                // Show the addModal
                $("#addImgModal").modal("show");
        });
        //Save Add
        $("#addImgModal").on("click", ".btn-primary", function () {
            var imageData = {
                imageId: 0,
                roomId: $("#addRoomIdInput").val(),
                imageUrl: $("#addImageUrlInput").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomImage",
                type: "post", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(imageData), // Convert hotelData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    console.log(result);
                    $("#addImgModal").modal("hide");
                    showRoomImages(top, value);
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showRoomImages(top, value);
                }
            });
        });
        //Delete
        $("table").on("click", ".delete-img-btn", function () {
            var imageId = $(this).data("imageId");
            if (confirm("Are you sure you want to delete this image?")) {
                $.ajax({
                    url: "https://localhost:7152/api/RoomImage/" + imageId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        console.log(result);
                        showRoomImages(); // Refresh the table after deletion
                        toastr.success('Image deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete image.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
        //Edit
        $("table").on("click", ".edit-img-btn", function () {
            var imageId = $(this).data("imageId");
            var roomId;
            $.ajax({
                url: "https://localhost:7152/api/RoomImage/" + imageId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#updateImageId").val(result["imageId"]);
                    $("#updateRoomId").val(result["roomId"]);
                    $("#updateImageURL").val(result["imageUrl"]);
                    console.log("Edit Image: " + JSON.stringify(result));
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
            $.ajax({
                url: "https://localhost:7152/api/Room",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    var selectElement = $("#updateRoomId");
                    selectElement.empty(); // Clear previous options

                    $.each(result, function (index, room) {
                        var option = $("<option>").attr("value", room.roomId).text(room.roomName);
                        if (room.roomId == roomId) {
                            option.attr("selected", "selected"); // Set selected option
                        }
                        selectElement.append(option);
                    });
                    $("#editImgModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr)
                }
            });
        });
        //Save Edit
        $("#editImgModal").on("click", ".btn-primary", function () {
            var imageId = $("#updateImageId").val();
            var imageData = {
                imageId: $("#updateImageId").val(),
                imageUrl: $("#updateImageURL").val(),
                roomId: $("#updateRoomId").val(),
            };

            $.ajax({
                url: "https://localhost:7152/api/RoomImage/" + imageId,
                type: "put", // Use "put" method to update the hotel information
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(imageData), // Convert imageData object to JSON string
                success: function (result, status, xhr) {
                    // Handle the success response
                    $("#editImgModal").modal("hide");
                    showRoomImages(top, value);
                    // Show success toast notification
                    toastr.success('Hotel information updated successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    // Handle the error response
                    showRoomImages(); // Corrected function name here
                }
            });
        });
    });
</script>

