@{
    Layout = null;
}
<link href="~/css/authcss/style.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<section class="gradient-form" style="background-color: #eee">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                         style="width: 185px"
                                         alt="logo" />
                                    <h4 class="mt-1 mb-5 pb-1">Booking</h4>
                                </div>

                                <form id="registrationForm">
                                    <p>Create new account</p>

                                    <div class="mb-4">
                                        <input id="email" class="form-control" placeholder="Phone number or email address" required />
                                        <div class="alert alert-danger" role="alert">
                                            This email already exists!
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <input id="password" type="password" class="form-control" minlength="6" maxlength="20" placeholder="Your password " required />

                                    </div>

                                    <div class="mb-4">
                                        <input id="username" type="text" class="form-control" maxlength="250" placeholder="Full Name" required />
                                    </div>

                                    <div class="mb-4">
                                        <input id="phone" type="tel" class="form-control" maxlength="12" placeholder="Your Phone" required />
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button id="register" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                                                type="button">
                                            Register
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <a asp-controller="Auth" asp-action="Login" type="button" class="btn btn-outline-primary">
                                            Sign In
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a company</h4>
                                <p class="small mb-0">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                                    sed do eiusmod tempor incididunt ut labore et dolore magna
                                    aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                                    ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .toast-success {
        background-color: #28a745;
    }

    .toast-error {
        background-color: #dc3545;
    }

    .toast-info {
        background-color: #17a2b8;
    }

    .toast-warning {
        background-color: #ffc107;
    }

    .alert {
        margin-top: 10px !important;
        padding-top: 5px !important;
        padding-bottom: 5px !important;
        padding-left: 12px !important;
        padding-right: 12px !important;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $(".alert").hide();

        var email;
        var emailnull = "";

        $("#email").on("input", function () {
            email = $("#email").val();
            console.log(email);
            if (email.trim() === "") {
                checkEmailExit(emailnull);
            } else {
                checkEmailExit(email);
            }
        });

        function checkEmailExit(email) {
            $.ajax({
                url: "https://localhost:7152/api/User?$filter=email eq '" + email + "'",
                type: "GET",
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    console.log("Check Email successful:", response);
                    if (response.length != 0) {
                        $(".alert").show();
                    } else {
                        $(".alert").hide();
                    }
                },
                error: function (error) {
                    console.error("Check Email failed:", error);
                }
            });
        }

        $("#register").on("click", function () {

            var registrationForm = document.getElementById("registrationForm");
            var password = $("#password").val();
            // Check if all required fields are filled
            if (!registrationForm.checkValidity()) {
                if (password.length < 6) {
                    toastr.warning('Password must be at least 6 characters long.', 'Warning', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-warning',
                        timeOut: 3000
                    });
                    return;
                }
                // If any required field is empty, show an error message and return
                toastr.error('Please fill in all required fields.', 'Error', {
                    positionClass: 'toast-top-right',
                    closeButton: true,
                    toastClass: 'toast-error',
                    timeOut: 3000
                });
                return;
            }

            var registrationData = {
                userId: 0,
                roleId: 2,
                username: $("#username").val(),
                email: $("#email").val(),
                password: $("#password").val(),
                phone: $("#phone").val()
            };
            console.log(JSON.stringify(registrationData));
            $.ajax({
                url: "https://localhost:7152/api/User",
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify(registrationData),
                success: function (response) {
                    toastr.success('Register successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                    console.log("Registration successful:", response);
                },
                error: function (error) {
                    toastr.success('Registration failed.', 'Error', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-error',
                        timeOut: 3000
                    });
                    console.error("Registration failed:", error);
                }
            });
        })
    })
</script>
