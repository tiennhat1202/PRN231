<script type="text/javascript">
    $(document).ready(function () {
        var searchAuthor = $("#searchAuthor");

        var urlDefault = "https://localhost:7026/api/Author"



        showAllAuthor(urlDefault);

        $("#searchAuthor").on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var query = searchAuthor.val();

                var urlAuthorName = "https://localhost:7026/api/Author?$filter=contains(firstName, '" + query + "')"

                if (query.trim() != "") {
                    showAllAuthor(urlAuthorName);
                }
                else {
                    showAllAuthor(urlDefault);
                }
            }
        });

        function showAllAuthor(url) {
            var bookResult;
            var booksPromise = $.ajax({
                url: url,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                bookResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(booksPromise).done(function () {
                $("#author").html("");

                $.each(bookResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["authorId"]));
                    appendElement.append($("<td>").html(value["firstName"]));
                    appendElement.append($("<td>").html(value["lastName"]));
                    appendElement.append($("<td>").html(value["city"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-author-id='" + value["authorId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-btn' data-author-id='" + value["authorId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#author").append(appendElement);
                });

            });
        }

        $(".add-btn").click(function () {
            // Clear input fields
            $("#addFname").val("");
            $("#addLName").val("");
            $("#addCity").val("");
            // Show the addModal
            $("#addModal").modal("show");
        });

        //Save
        $("#addModal").on("click", ".btn-primary", function () {
            var authorData = {
                authorId: 0,
                lastName: $("#addLName").val(),
                firstName: $("#addFname").val(),
                city: $("#addCity").val(),
            };


            $.ajax({
                url: "https://localhost:7026/api/Author",
                type: "post",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(authorData),
                success: function (result, status, xhr) {
                    console.log(result);
                    $("#addModal").modal("hide");
                    showAllAuthor(urlDefault);
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllAuthor(urlDefault);
                }
            });
        });

        $("table").on("click", ".edit-btn", function () {
            var authorId = $(this).data("author-id");
            $.ajax({
                url: "https://localhost:7026/api/Author/" + authorId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#updateAuthorId").val(result["authorId"]);
                    $("#updateFname").val(result["firstName"]);
                    $("#updateLname").val(result["lastName"]);
                    $("#updatePhone").val(result["phone"]);
                    $("#updateAddress").val(result["address"]);
                    $("#updateCity").val(result["city"]);
                    $("#updateState").val(result["state"]);
                    $("#updateZip").val(result["zip"]);
                    $("#updateEmailAddress").val(result["emailAddress"]);
                    $("#editModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                   
                }
            });
        });
        $("#editModal").on("click", ".btn-primary", function () {
            var authorId = $("#updateAuthorId").val();
            var authorData = {
                authorId: $("#updateAuthorId").val(),
                firstName: $("#updateFname").val(),
                lastName: $("#updateLname").val(),
                phone: $("#updatePhone").val(),
                address: $("#updateAddress").val(),
                city: $("#updateCity").val(),
                state: $("#updateState").val(),
                zip: $("#updateZip").val(),
                emailAddress: $("#updateEmailAddress").val()
            };

            $.ajax({
                url: "https://localhost:7026/api/Author/" + authorId,
                type: "put",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(authorData),
                success: function (result, status, xhr) {
                    $("#editModal").modal("hide");
                    showAllAuthor(urlDefault);
                    // Show success toast notification
                    toastr.success('Update Book successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllAuthor(urlDefault);
                    toastr.success('Update Book Error', 'Error', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-error',
                        timeOut: 3000
                    });
                }
            });
        });

        $("table").on("click", ".delete-btn", function () {
            var authorId = $(this).data("author-id");
            if (confirm("Are you sure you want to delete this author?")) {
                $.ajax({
                    url: "https://localhost:7026/api/Author/" + authorId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        showAllAuthor(urlDefault);
                        toastr.success('Room deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete Book.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
    });
</script>

