    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        var searchPub = $("#searchPub");

        var urlDefault = "https://localhost:7026/api/Publisher"



        showAllPublisher(urlDefault);

        $("#searchPub").on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var query = searchPub.val();

                var urlPublisherName = "https://localhost:7026/api/Publisher?$filter=contains(publisherName, '" + query + "')"

                if (query.trim() != "") {
                    showAllPublisher(urlPublisherName);
                }
                else {
                    showAllPublisher(urlDefault);
                }
            }
        });

        function showAllPublisher(url) {
            var bookResult;
            var booksPromise = $.ajax({
                url: url,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                bookResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(booksPromise).done(function () {
                $("#publisher").html("");

                $.each(bookResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["pubId"]));
                    appendElement.append($("<td>").html(value["publisherName"]));
                    appendElement.append($("<td>").html(value["city"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-publisher-id='" + value["pubId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-btn' data-publisher-id='" + value["pubId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#publisher").append(appendElement);
                });

            });
        }

        $(".add-btn").click(function () {
            // Clear input fields
            $("#addName").val("");
            $("#addCity").val("");
            // Show the addModal
            $("#addModal").modal("show");
        });

        //Save
        $("#addModal").on("click", ".btn-primary", function () {
            var pubData = {
                pubId: 0,
                publisherName: $("#addName").val(),
                city: $("#addCity").val(),
            };


            $.ajax({
                url: "https://localhost:7026/api/Publisher",
                type: "post",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(pubData),
                success: function (result, status, xhr) {
                    console.log(result);
                    $("#addModal").modal("hide");
                    showAllPublisher(urlDefault);
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllPublisher(urlDefault);
                }
            });
        });

        $("table").on("click", ".edit-btn", function () {
            var pubId = $(this).data("publisher-id");
            $.ajax({
                url: "https://localhost:7026/api/Publisher/" + pubId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    console.log($("#updatepubId").val(result["pubId"]));
                    $("#updatepubId").val(result["pubId"]);
                    $("#updatePName").val(result["publisherName"]);
                    $("#updatePState").val(result["state"]);
                    $("#updatePCountry").val(result["country"]);
                    $("#updatePCity").val(result["city"]);
                    $("#editModal").modal("show");
                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
        });


        $("#editModal").on("click", ".btn-primary", function () {
            var pubId = $("#updatepubId").val();
            var pubData = {
                pubId: $("#updatepubId").val(),
                publisherName: $("#updatePName").val(),
                city: $("#updatePCity").val(),
                state: $("#updatePState").val(),
                country: $("#updatePCountry").val(),
            };

            $.ajax({
                url: "https://localhost:7026/api/Publisher/" + pubId,
                type: "put",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(pubData),
                success: function (result, status, xhr) {
                    $("#editModal").modal("hide");
                    showAllPublisher(urlDefault);
                    // Show success toast notification
                    toastr.success('Update Publisher successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllPublisher(urlDefault);
                    toastr.success('Update Publisher Error', 'Error', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-error',
                        timeOut: 3000
                    });
                }
            });
        });

        $("table").on("click", ".delete-btn", function () {
            var pubId = $(this).data("publisher-id");
            if (confirm("Are you sure you want to delete this Publisher?")) {
                $.ajax({
                    url: "https://localhost:7026/api/Publisher/" + pubId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        showAllPublisher(urlDefault);
                        toastr.success('Publisher deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete Publisher.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
    });
</script>

