<script type="text/javascript">
    $(document).ready(function () {
        var searchbookName = $("#searchbookName");
        var searchPrice = $("#searchPrice");
        var urlDefault = "https://localhost:7026/api/Book"



        showAllBook(urlDefault);

        $("#searchbookName").on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var queryTitle = searchbookName.val();

                var urlTitle = "https://localhost:7026/api/Book?$filter=contains(title, '" + queryTitle + "')"

                if (queryTitle.trim() != "") {
                    showAllBook(urlTitle);
                    console.log("URL: " + urlTitle)
                }
                else {
                    showAllBook(urlDefault);
                    console.log("URL: Dèault ")
                }
            }
        });

        $("#searchPrice").on("keypress", function (event) {
            if (event.which === 13) {
                event.preventDefault();
                var queryPrice = parseFloat(searchPrice.val());

                var urlPrice = "https://localhost:7026/api/Book?$filter=price eq " + queryPrice

                if (!isNaN(queryPrice)) {
                    console.log("URL: " + urlPrice)
                    showAllBook(urlPrice);
                }
                else {
                    showAllBook(urlDefault);
                }
            }
        });

        $(".searchbook").on("click", function (event) {
            event.preventDefault();
            var queryTitle = searchbookName.val();
            var queryPrice = parseFloat(searchPrice.val());

            var urlPriceAndTitle = "https://localhost:7026/api/Book?$filter=contains(title, '" + queryTitle + "') and price eq " + queryPrice

            if (queryTitle.trim() != "" && !isNaN(queryPrice)) {
                showAllBook(urlPriceAndTitle);
                console.log("URL: " + urlPriceAndTitle)
            }
            else {
                showAllBook(urlDefault);
            }
        });

        function showAllBook(url) {
            var bookResult;
            var booksPromise = $.ajax({
                url: url,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function (result) {
                bookResult = result;
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });

            $.when(booksPromise).done(function () {
                $("#book").html("");

                $.each(bookResult, function (index, value) {
                    var appendElement = $("<tr>");
                    appendElement.append($("<td>").html(value["bookId"]));
                    appendElement.append($("<td>").html(value["title"]));
                    appendElement.append($("<td>").html(value["type"]));
                    appendElement.append($("<td>").html(value["pubId"]));
                    appendElement.append($("<td>").html(value["price"]));
                    appendElement.append($("<td>").html(value["advance"]));
                    appendElement.append($("<td>").html(value["royalty"]));
                    appendElement.append($("<td>").html(value["ytdSales"]));
                    appendElement.append($("<td>").html(value["notes"]));
                    appendElement.append($("<td>").html(value["publishedDate"]));
                    appendElement.append($("<td class=\"text-center\">").html("<button class='btn btn-outline-warning edit-btn' data-book-id='" + value["bookId"] + "'><i class='fa-regular fa-pen-to-square'></i></button> <button class='btn btn-outline-danger delete-btn' data-book-id='" + value["bookId"] + "'><i class='fa-regular fa-trash-can'></i></button>"));
                    $("#book").append(appendElement);
                });

            });
        }

        $(".add-btn").click(function () {
            // Clear input fields
            $("#addPublishedDate").val("");
            $("#addNotes").val("");
            $("#addYtdSales").val("");
            $("#addRoyalty").val("");
            $("#addPrice").val("");
            $("#addAdvance").val("");
            
            $("#addType").val("");
            $("#addTitle").val("");
            
            // Show the addModal
            $("#addModal").modal("show");

            var apiUrl1 = "https://localhost:7026/api/Publisher";
            var request1 = $.ajax({
                url: apiUrl1,
                type: "GET",
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            });

            $.when(request1).done(function (response1) {
                var selectElement = $("#addPubId");
                selectElement.empty();
                $.each(response1, function (index, pub) {
                    selectElement.append($("<option>").attr("value", pub.pubId).text(pub.publisherName));
                });
            }).fail(function (xhr, status, error) {
                console.log(xhr);
            });
        });

        //Save
        $("#addModal").on("click", ".btn-primary", function () {
            var bookData = {
                bookId: 0,
                title: $("#addTitle").val(),
                type: $("#addType").val(),
                pubId: $("#addPubId").val(),
                price: $("#addPrice").val(),
                advance: $("#addAdvance").val(),
                royalty: $("#addRoyalty").val(),
                ytdSales: $("#addYtdSales").val(),
                notes: $("#addNotes").val(),
                publishedDate: $("#addPublishedDate").val()
            };

            $.ajax({
                url: "https://localhost:7026/api/Book",
                type: "post",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(bookData), 
                success: function (result, status, xhr) {
                    console.log(result);
                    $("#addModal").modal("hide");
                    showAllBook(urlDefault);
                    // Show success toast notification
                    toastr.success('Add Image successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllBook(urlDefault);
                }
            });
        });

        $("table").on("click", ".edit-btn", function () {
            var bookId = $(this).data("book-id");
            var pubId;
            $.ajax({
                url: "https://localhost:7026/api/Book/" + bookId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    $("#updatebookId").val(result["bookId"]);
                    $("#updateTitle").val(result["title"]);
                    $("#updateType").val(result["type"]);
                    $("#updatePubId").val(result["pubId"]);
                    $("#updatePrice").val(result["price"]);
                    $("#updateAdvance").val(result["advance"]);
                    $("#updateRoyalty").val(result["royalty"]);
                    $("#updateYtdSales").val(result["ytdSales"]);
                    $("#updateNotes").val(result["notes"]);
                    var publishedDate = new Date(result["publishedDate"]).toISOString().slice(0, 16);
                    $("#updatePublishedDate").val(publishedDate);

                },
                error: function (xhr, status, error) {
                    console.log(xhr);
                }
            });
            $.ajax({
                url: "https://localhost:7026/api/Publisher",
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result, status, xhr) {
                    var selectElement = $("#updatePubId");
                    selectElement.empty(); 

                    $.each(result, function (index, pub) {
                        var option = $("<option>").attr("value", pub.pubId).text(pub.publisherName);
                        if (pub.pubId == pubId) {
                            option.attr("selected", "selected"); 
                        }
                        selectElement.append(option);
                    });
                    $("#editModal").modal("show");
                    toastr.success('Add Book successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-success',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    console.log(xhr)
                    toastr.success('Update Book Error. Check Format Field', 'Error', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-error',
                        timeOut: 3000
                    });
                }
            });
        });
        $("#editModal").on("click", ".btn-primary", function () {
            var bookId = $("#updatebookId").val();
            var bookData = {
                bookId: $("#updatebookId").val(),
                title: $("#updateTitle").val(),
                type: $("#updateType").val(),
                pubId: $("#updatePubId").val(),
                price: $("#updatePrice").val(),
                advance: $("#updateAdvance").val(),
                royalty: $("#updateRoyalty").val(),
                ytdSales: $("#updateYtdSales").val(),
                notes: $("#updateNotes").val(),
                publishedDate: $("#updatePublishedDate").val()
            };

            $.ajax({
                url: "https://localhost:7026/api/Book/" + bookId,
                type: "put",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(bookData),
                success: function (result, status, xhr) {
                    $("#editModal").modal("hide");
                    showAllBook(urlDefault);
                    // Show success toast notification
                    toastr.success('Update Book successfully.', 'Success', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-info',
                        timeOut: 3000
                    });
                },
                error: function (xhr, status, error) {
                    showAllBook(urlDefault);
                    toastr.success('Update Book Error. Check Format Field', 'Error', {
                        positionClass: 'toast-top-right',
                        closeButton: true,
                        toastClass: 'toast-error',
                        timeOut: 3000
                    });
                }
            });
        });

        $("table").on("click", ".delete-btn", function () {
            var bookId = $(this).data("book-id");
            if (confirm("Are you sure you want to delete this book?")) {
                $.ajax({
                    url: "https://localhost:7026/api/Book/" + bookId,
                    type: "delete",
                    success: function (result, status, xhr) {
                        showAllBook(urlDefault);
                        toastr.success('Room deleted successfully.', 'Success', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-success',
                            timeOut: 3000
                        });

                    },
                    error: function (xhr, status, error) {
                        console.log(xhr);
                        toastr.error('Failed to delete Book.', 'Error', {
                            positionClass: 'toast-top-right',
                            closeButton: true,
                            toastClass: 'toast-error',
                            timeOut: 3000
                        });
                    }
                });
            }
        });
    });
</script>

