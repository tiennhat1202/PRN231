@using BusinessObject.DTO.AuthorDTO;
@using eBookStoreClient.Models;
@model AuthorIndexModel;

@{
    ViewData["Title"] = "Index";
}
<h1>Enter Author Information</h1>
<div class="row">
    <div class="col-12">
        <form method="post" action="/Author/Create">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label">LastName</label>
                <input class="form-control" type="text" name="LastName" required />
            </div>
            <div class="form-group">
                <label class="control-label">FirstName</label>
                <input class="form-control" type="text" name="FirstName" required />
            </div>
            <div class="form-group">
                <label class="control-label">City</label>
                <input class="form-control" type="text" name="City" required />
            </div>
            <div class="form-group">
                <label class="control-label">EmailAddress</label>
                <input class="form-control" type="text" name="EmailAddress" required />
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h1>List Author</h1>


<table class="table">
    <form asp-action="Index" id="searchAuthorForm">
    <thead style="background-color: cadetblue">
        <tr>
            <th>
                <div> AuthorId</div>
                <input class="form-control p-0" placeholder="Search" type="text" asp-for="SearchAuthor.AuthorId" id="searchAuthorId" />
            </th>
            <th>
                <div>LastName</div>
                <input class="form-control p-0" placeholder="Search" type="text" asp-for="SearchAuthor.LastName" id="searchLastName" />
            </th>
            <th>
                <div>FirstName</div>
                <input class="form-control p-0" placeholder="Search" type="text" asp-for="SearchAuthor.FirstName" id="searchFirstName" />
            </th>
            <th>
                <div>City</div>
                <input class="form-control p-0" placeholder="Search" type="text" asp-for="SearchAuthor.City" id="searchCity" />
            </th>
            <th>
                <div>Action</div>
            </th>
        </tr>
    </thead>
    </form>
    <tbody>
        @foreach (var (item, index) in Model.AuthorList.Select((value, i) => (value, i + 1)))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AuthorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AuthorId })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    document.getElementById("searchLastName").addEventListener("keyup", function (event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            document.getElementById("searchAuthorForm").submit();
        }
    });
    document.getElementById("searchAuthorId").addEventListener("keyup", function (event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            document.getElementById("searchAuthorForm").submit();
        }
    });
    document.getElementById("searchCity").addEventListener("keyup", function (event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            document.getElementById("searchAuthorForm").submit();
        }
    });
    document.getElementById("searchFirstName").addEventListener("keyup", function (event) {
        event.preventDefault();
        if (event.keyCode === 13) {
            document.getElementById("searchAuthorForm").submit();
        }
    });
</script>