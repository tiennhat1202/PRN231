@page
@model eStoreClient.Pages.Orders.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ListOrders";
    int index = 1;
    var user = HttpContext.Session.GetString("User");
}

<h1>List Orders</h1>

<div class="d-flex justify-content-between">
    @if (user == "Admin")
    {
        <div>
            <p>
                <a asp-page="Create">New Order</a>
            </p>
        </div>
    }
    <div>
        <form method="get" class="d-flex justify-content-end align-items-center">
            <label>DateTo</label>
            <input asp-for="DateFrom" class="form-control ms-3 me-3" />

            <label>DateFrom</label>
            <input asp-for="DateTo" class="form-control me-2" />

            @if (user == "Admin")
            {
                <label>OrderBy</label>
                <select class="ms-3" asp-for="Sort">
                    <option value="desc-total-sale">DecendingOrder</option>
                </select>
            }

            <input type="submit" class="btn bg-primary text-white ms-3" value="Search" />
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Member</th>
            <th>OrderDate</th>
            <th>RequireDate</th>
            <th>ShippedDate</th>
            <th>Freight</th>
            @if (user == "Admin")
            {
                <th>TotalSale</th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listNewOrders)
        {
            <tr>
                <td>@(index)</td>
                <td hidden>@(index++)</td>
                @foreach (var mem in Model.listMembers)
                {
                    if (item.MemberId == mem.MemberId)
                    {
                        <td>@mem.Email</td>
                    }
                }
                <td>@item.OrderDate</td>
                <td>@item.RequireDate</td>
                <td>@item.ShippedDate</td>
                <td>$@item.Freight</td>
                @if (user == "Admin")
                {
                    <td>$@item.TotalSale</td>
                    <td class="d-flex">
                        <a style="padding-left: 5px; padding-right: 5px; text-decoration: none;" asp-page="Edit" asp-route-id="@item.OrderId">Edit</a> |
                        <a style="padding-left: 5px; padding-right: 5px; text-decoration: none;" asp-page="Details" asp-route-id="@item.OrderId">Details</a> |
                        <form method="post">
                            <button style="border: none; background: #ffffff; padding-left: 5px; color: red; text-decoration: underline;" type="submit" class="text-decoration-none" asp-page-handler="DeleteOrder" asp-route-id="@item.OrderId">Delete</button>
                        </form>
                    </td>
                }
                else if (user == "User")
                {
                    <td class="d-flex"><a asp-page="Details" asp-route-id="@item.OrderId">Details</a></td>
                }
            </tr>
        }
    </tbody>
</table>