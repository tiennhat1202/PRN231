@page
@model eStoreClient.Pages.Products.EditModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditProduct";
}

<h1>Edit Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UpdateProduct!.ProductId" />
            <div class="form-group">
                <label asp-for="UpdateProduct!.ProductName" class="control-label"></label>
                <input asp-for="UpdateProduct!.ProductName" class="form-control" />
                <span asp-validation-for="UpdateProduct!.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="UpdateProduct!.CategoryId" class="form-select">
                    @foreach (var cat in Model.listCategories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="UpdateProduct!.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProduct!.Weight" class="control-label"></label>
                <input asp-for="UpdateProduct!.Weight" class="form-control" />
                <span asp-validation-for="UpdateProduct!.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProduct!.UnitPrice" class="control-label"></label>
                <input asp-for="UpdateProduct!.UnitPrice" class="form-control" />
                <span asp-validation-for="UpdateProduct!.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProduct!.UnitsInStock" class="control-label"></label>
                <input asp-for="UpdateProduct!.UnitsInStock" class="form-control" />
                <span asp-validation-for="UpdateProduct!.UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group pt-2 pb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}