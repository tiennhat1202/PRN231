@page
@model eStoreClient.Pages.Products.DetailsModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ProductDetails";
}

<h1>Details Product</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.getProduct!.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.getProduct!.ProductName)
        </dd>

        <dd class="col-sm-2 fw-bold">Category:</dd>
        <dd class="col-sm-10">
            <p>@ViewBag.CategoryName</p>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.getProduct!.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.getProduct!.Weight)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.getProduct!.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.getProduct!.UnitPrice)
        </dd>       
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.getProduct!.UnitsInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.getProduct!.UnitsInStock)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.getProduct!.ProductId">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>